{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "运行并调试后端",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "${workspaceFolder}/main.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    }
  ]
}
